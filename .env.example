# Environment Configuration Template
# Copy this file to .env and fill in your API keys

# Cerebras API Key (Required for fast inference)
CEREBRAS_API_KEY=your_cerebras_api_key_here

# Application Configuration
DEBUG=true
HOST=0.0.0.0
PORT=8000

# File Limits
MAX_FILE_SIZE=104857600  # 100MB

# Vector Database
VECTOR_DB_PATH=./data/chroma_db
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Audio Processing
WHISPER_MODEL=base
# FFMPEG_PATH=  # Optional: Path to ffmpeg.exe (auto-detected on Windows if not set)

# Image Processing  
CLIP_MODEL=ViT-B/32

# RAG Configuration
MAX_CONTEXT_LENGTH=4096
MAX_RETRIEVED_DOCS=5
USE_LOCAL_MODEL=false  # Set to true only if you want to use local Llama model (requires lots of GPU memory)

# Citation Configuration
CITATION_FORMAT=numbered