{
  "name": "Multimodal RAG System",
  "description": "An intelligent search and retrieval system for documents, images, audio, and video using Meta Llama via Cerebras API",
  "repository": "https://github.com/temburuakhil/WeMakeDevs-Hackathon",
  "logo": "https://raw.githubusercontent.com/temburuakhil/WeMakeDevs-Hackathon/main/.github/logo.png",
  "keywords": [
    "rag",
    "multimodal",
    "ai",
    "llama",
    "cerebras",
    "vector-database",
    "chromadb",
    "whisper",
    "clip",
    "fastapi"
  ],
  "services": {
    "app": {
      "source": {
        "repo": "temburuakhil/WeMakeDevs-Hackathon",
        "branch": "main"
      },
      "build": {
        "builder": "DOCKERFILE",
        "dockerfilePath": "Dockerfile.railway"
      },
      "deploy": {
        "startCommand": "python -m uvicorn src.api.main:app --host 0.0.0.0 --port $PORT",
        "healthcheckPath": "/health",
        "restartPolicyType": "ON_FAILURE"
      },
      "env": {
        "CEREBRAS_API_KEY": {
          "description": "Your Cerebras API key for fast Llama inference",
          "required": true,
          "generator": {
            "type": "secret"
          }
        },
        "PORT": {
          "description": "Application port (Railway sets this automatically)",
          "default": "8000"
        },
        "DEBUG": {
          "description": "Debug mode (false for production)",
          "default": "false"
        },
        "PYTHONUNBUFFERED": {
          "description": "Python unbuffered output",
          "default": "1"
        },
        "VECTOR_DB_PATH": {
          "description": "Path to ChromaDB storage",
          "default": "/app/data/chroma_db"
        },
        "WHISPER_MODEL": {
          "description": "Whisper model size (tiny/base/small/medium)",
          "default": "base"
        },
        "EMBEDDING_MODEL": {
          "description": "Sentence transformer model",
          "default": "all-MiniLM-L6-v2"
        },
        "MAX_FILE_SIZE": {
          "description": "Maximum file upload size in bytes",
          "default": "104857600"
        },
        "MAX_RETRIEVED_DOCS": {
          "description": "Number of documents to retrieve for RAG",
          "default": "5"
        }
      }
    }
  }
}
